% ----------------------------
% Fonts, Layout, and Spacing
% ----------------------------
\RequirePackage[utf8]{inputenc} % UTF-8 encoding
\RequirePackage{lmodern} % Latin Modern font
\RequirePackage{courier} % For Courier font in code listings
\RequirePackage[T1]{fontenc} % For font encoding
\RequirePackage{inconsolata} % For Inconsolata font in code listings
\RequirePackage[a4paper, margin=1in]{geometry} % Page size and margins
\RequirePackage{setspace} % For line spacing
\doublespacing

% ----------------------------
% Graphics and Colors
% ----------------------------
\RequirePackage{graphicx} % For including images
\RequirePackage{xcolor} % For color definitions
\RequirePackage{titling} % For title page customization
\RequirePackage{colortbl} % For colored tables
\RequirePackage{multicol}  % For multiple columns in bibliography
\RequirePackage{amsmath}  % For align environment
\RequirePackage{amssymb} % For math symbols

% ----------------------------
% Hyperlink Setup
% ----------------------------
\PassOptionsToPackage{hyphens}{url}
\RequirePackage[hidelinks]{hyperref}
\hypersetup{
  colorlinks=true,
  linkcolor=[rgb]{0.1,0.3,0.9},
  urlcolor=[rgb]{0.2,0.2,0.2},
  citecolor=[rgb]{0.1,0.3,0.9},
  filecolor=magenta
}

% ----------------------------
% Bibliography
% ----------------------------
\RequirePackage[backend=biber,style=numeric,url=true,maxnames=1,minnames=1]{biblatex}
\DeclareFieldFormat{howpublished}{\url{#1}}
\RequirePackage[nameinlink]{cleveref} % For clever references like \cref{sec:label}, \Cref{sec:label}, etc.
\RequirePackage{csquotes}  % For proper quotation marks, \parencite, and \enquote.

% ----------------------------
% Comments
% ----------------------------
\RequirePackage{tabularx} % For tabularx environment
\RequirePackage{comment} % For commenting out sections of text

% ----------------------------
% Table Styling
% ----------------------------
\RequirePackage{booktabs} % For better table lines


% ----------------------------
% Figure
% ----------------------------
\usepackage{wrapfig}
\RequirePackage{float} % For figure placement

% ----------------------------
% List Customization
% ----------------------------
\RequirePackage{enumitem}

% ----------------------------
% Diagram and TikZ Library
% ----------------------------
\RequirePackage{tikz}
\usetikzlibrary{positioning}
\usetikzlibrary{arrows}

% ----------------------------
% Code boxes
% ----------------------------
\RequirePackage{listings} % For code listings
\RequirePackage{caption} % For captions on code listings
\RequirePackage{setup/packages/code} % For code listings


% ----------------------------
% Front Page Design Packages
% ----------------------------
\RequirePackage{eso-pic}
\RequirePackage{transparent}
\RequirePackage{pagecolor}

